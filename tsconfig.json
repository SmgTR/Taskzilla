{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/network/*": ["src/network/*"],
      "@/dashboard/*": ["src/components/dashboard/*"],
      "@/containers/*": ["src/containers/*"],
      "@/pages/*": ["pages/*"],
      "@/src/assets/*": ["assets/*"],
      "@/api/*": ["pages/api/*"],
      "@/styles/*": ["styles/*"],
      "@/types/*": ["types/*"],
      "@/public/*": ["public/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "tools/configCheck.mjs",
    "project.config.js",
    "tools/configCheck.js",
    "src/**/*",
    "prisma/_seed.ts"
  ],
  "exclude": ["node_modules"]
}
